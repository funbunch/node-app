<h1>My Projects</h1>

<div class="row">
  <div class="col-md-4">
    <ul class="list-group">
      <li class="list-group-item">avatar <img src="{{bio.avatar_url}}" class="img-rounded img-responsive"/></li>
      <li class="list-group-item">{{bio.login}}</li>
      <li class="list-group-item">Date joined: {{bio.created_at}}</li>
    </ul>
  </div>

  <div class="col-md-8">
    <ul class="list-group">
      {{#each repos as | repo|}}
      <li class="list-group-item">
        <div class="repo-list-stats">
          <span class="repo-list-stat-item">Repo language</span>
          <span class="repo-list-stat-item"><i class="fa fa-star"></i>0</span>
          <span class="repo-list-stat-item"><i class="fa fa-code-fork"></i>1</span>
        </div>
        <h4>
          {{repo.name}}
        </h4>
        <p>
          {{repo.description}}
        </p>
        <p class="repo-list-meta">
          Updated on Jan 1, 2016
        </p>
      </li>
      {{/each}}
    </ul>
  </div>
</div>